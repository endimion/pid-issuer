{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Ferries Boarding Pass",
  "description": "Schema of a Verifiable Boarding Pass",
  "type": "object",
  "allOf": [
    {
      "$ref": "https://api-pilot.ebsi.eu/trusted-schemas-registry/v3/schemas/0x0acc66e878b940aecd981aaee06112e55bcca7cc541a6bcf6ad99a85fbb7cc63"
    },
    {
      "properties": {
        "credentialSubject": {
          "description": "Defines additional properties on credentialSubject to describe IDs that do not have a substantial level of assurance.",
          "type": "object",
          "properties": {
            "id": {
              "description": "Defines a unique identifier of the credential subject. DID:Key value, generated by the user wallet and associated to the credential holder. Refer specification available at https://api-pilot.ebsi.eu/docs/specs/did-methods/did-method-for-natural-person ",
              "type": "string"
            },
            "identifier": {
              "description": "Defines an alternative identifier for the credential subject and has as value of first name and last name.",
              "type": "string"
            },
            "ticketQR": {
              "description": "QR code of the ticket",
              "type": "string"
            },

            "ticketNumber": {
              "description": "Number of the ticket",
              "type": "string"
            },
            "ticketLet": {
              "description": "Let of the ticket",
              "type": "string"
            },

            "lastName": {
              "description": "Last name of subject",
              "type": "string"
            },
            "firstName": {
              "description": "First Name of subject",
              "type": "string"
            },
            "seatType": {
              "description": "Type of Seat",
              "type": "string"
            },
            "seatNumber": {
              "description": "Number on the seat",
              "type": "string"
            },

            "departureDate": {
              "description": "DEPARTURE DATE OF THE TRIP",
              "type": "string",
              "format":"date"
            },
            "departureTime": {
              "description": "DEPARTURE TIME OF THE TRIP",
              "type": "string",
              "format": "time"
            },
            "arrivalDate": {
              "description": "DATE OF ARRIVAL",
              "type": "string",
              "format":"date"
            },
            "arrivalTime": {
              "description": "TIME OF ARRIVAL",
              "type": "string",
              "format": "time"
            },
            "arrivalPort": {
              "description": "PORT OF ARRIVAL",
              "type": "string"
            },
            "vesselDescription": {
              "description": "THE Name of the VESSEL",
              "type": "string"
            }
          },
          "required": [
            "id",
            "identifier",
            "ticketNumber",
            "ticketLet",
            "ticketQR"
          ]
        }
      }
    }
  ]
}